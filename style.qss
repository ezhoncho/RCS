/* Modern Dark Theme for RCS Application */

/* Main Application Styling */
QMainWindow {
    background-color: #2b2b2b;
    color: #ffffff;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 10pt;
}

/* Group Boxes */
QGroupBox {
    font-weight: bold;
    font-size: 11pt;
    color: #ffffff;
    border: 2px solid #3d3d3d;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 10px;
    background-color: #333333;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 8px 0 8px;
    color: #4da6ff;
}

/* Buttons */
QPushButton {
    background-color: #404040;
    border: 1px solid #555555;
    border-radius: 6px;
    color: #ffffff;
    font-size: 10pt;
    font-weight: 500;
    padding: 8px 16px;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #505050;
    border-color: #666666;
}

QPushButton:pressed {
    background-color: #353535;
    border-color: #777777;
}

QPushButton:disabled {
    background-color: #2a2a2a;
    color: #666666;
    border-color: #3a3a3a;
}

/* Primary Button (Start Recording) */
QPushButton#primaryButton {
    background-color: #0078d4;
    border-color: #106ebe;
}

QPushButton#primaryButton:hover {
    background-color: #1084d8;
    border-color: #0f6cbd;
}

QPushButton#primaryButton:pressed {
    background-color: #006bb3;
}

/* Success Button (Play Macro) */
QPushButton#successButton {
    background-color: #107c10;
    border-color: #0e6e0e;
}

QPushButton#successButton:hover {
    background-color: #128c12;
    border-color: #0d600d;
}

QPushButton#successButton:pressed {
    background-color: #0d5d0d;
}

/* Labels */
QLabel {
    color: #ffffff;
    font-size: 10pt;
}

/* Checkboxes */
QCheckBox {
    color: #ffffff;
    font-size: 10pt;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #555555;
    border-radius: 3px;
    background-color: #404040;
}

